{
  "moduleFileExtensions": ["js", "ts", "json"],
  "rootDir": "packages",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^eliza-util": "<rootDir>/util/src"
  },
  "modulePathIgnorePatterns": ["<rootDir>/(.*)/dist"],
  "coverageReporters": ["html"],
  "testEnvironment": "node",
  "projects": ["<rootDir>/*/jest.config.json"]
}
