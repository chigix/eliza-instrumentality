{
  "name": "eliza-instrumentality",
  "private": true,
  "scripts": {
    "start": "lerna run --stream start:playground",
    "test:playground": "lerna run --stream test:playground",
    "build": "shx rm -rf ./packages/*/dist && gulp ts-compiling && gulp make-packages",
    "test": "jest --config ./jest.config.json --runInBand",
    "eliza": "ts-node --project ./tsconfig.build.json ./packages/shell/src/bin/eliza.js",
    "prepack": "yarn build",
    "publish": "lerna publish --contents dist",
    "publish_docs": "lerna run --scope playground --stream release-storybook"
  },
  "repository": "git@github.com:chigix/eliza-inspire.git",
  "author": "Richard Lea <https://github.com/chigix>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.19",
    "@angular/cli": "~8.3.19",
    "@angular/compiler-cli": "~8.2.14",
    "@angular/language-service": "~8.2.14",
    "@babel/core": "^7.7.2",
    "@storybook/addon-actions": "^5.2.6",
    "@storybook/addon-links": "^5.2.6",
    "@storybook/addon-notes": "^5.2.6",
    "@storybook/addons": "^5.3.0-beta.1",
    "@storybook/angular": "^5.3.0-beta.1",
    "@storybook/cli": "^5.2.6",
    "@types/inquirer": "^6.5.0",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/jest": "^24.0.19",
    "@types/lodash": "^4.14.148",
    "@types/node": "~8.9.4",
    "angular-cli-ghpages": "^0.6.0",
    "babel-loader": "^8.0.6",
    "codelyzer": "^5.0.0",
    "fancy-log": "^1.3.3",
    "fs-extra": "^8.1.0",
    "gulp": "^4.0.2",
    "gulp-typescript": "^5.0.1",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^24.9.0",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
